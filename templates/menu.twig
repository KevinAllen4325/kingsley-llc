{% if menu %}
	<div class="navContainer flex-center">
		<ul>
		{% for item in items %}
			<li class="{{ item.classes | join(' ') }}">
				<a class="
					{% if item.children %} 
						flex-space-between 
					{% endif %}" 
					target="{{ item.target }}" 
					href="{{ item.link }}">
					{{ item.title }}
					{% if item.children %}
					<i class="fa fa-chevron-right"></i>
					{% endif %}
				</a>				
				{% if item.children %}
					<ul class="child-dropdown closed">
						{% for child in item.children %}
						<li class="{{ child.classes | join(' ') }}">
							<a 
							target="{{ child.target }}"
							href="{{ child.link }}">
								{{ child.title }}
							</a>
						</li>
						{% endfor %}
					</ul>
				{% endif %}

			</li>
		{% endfor %}
		</ul>
		<div class="hotline">
			<p>Call our 24/7 hotline for emergency water damage removal & cleanup</p>
			<a href="tel:{{phone_number}}">
				<i class="fa fa-phone"></i>
				24/7 Hotline
			</a>
		</div>
	</div>
{% endif %}