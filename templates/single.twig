{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper blog-page">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<div class="page-header flex-center show-featured-image" style="background-image: url({{ post.thumbnail.src }})">
				<div class="overlay"></div>
				<h1 class="article-h1">{{ post.title }}</h1>
			</div>
			<section class="article-content section-padding">
				<div class="container">
					<p class="blog-author">
					<span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> <time datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
				</p>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
